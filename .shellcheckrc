# Specify the shell dialect - 'sh' enforces POSIX compliance
shell=sh

# Checks that aren't enabled by default but are useful for robust scripts
enable=add-default-case
enable=avoid-nullary-conditions
enable=check-extra-masked-returns
enable=check-set-e-suppressed
enable=deprecate-which
enable=quote-safe-variables
enable=require-double-brackets

# Tells ShellCheck where to look for sourced files
source-path=libs:scripts:utils